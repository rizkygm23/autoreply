{
  "manifest_version": 3,
  "name": "Gemini Social Assistant",
  "version": "1.2",
  "description": "Auto-generate contextual replies for tweets and Discord messages",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://discord.com/channels/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://discord.com/channels/*"],
      "js": ["content-discord.js"]
    }
  ],
  "action": {
    "default_title": "Gemini Social Assistant"
  }
}
